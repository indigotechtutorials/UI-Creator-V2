<style data-controller="color-scheme" data-action="color-picker-change@window->color-scheme#updateColor">
  :root {
    /* User UI Library Color Scheme */

    --black: <%= @color_scheme[:black] %>;
    --dark-gray: <%= @color_scheme[:dark_gray] %>;
    --light-gray: <%= @color_scheme[:light_gray] %>;
    --white: <%= @color_scheme[:white] %>;
    --red: <%= @color_scheme[:red] %>;
    --green: <%= @color_scheme[:green] %>;
    --primary: <%= @color_scheme[:primary] %>;
    --secondary: <%= @color_scheme[:secondary] %>;

    /* Internal App Color Scheme */

    --internal-app-header: <%= @internal_app_color_scheme.header || "hsl(51 85.1% 6%)" %>;
    --internal-app-text: <%= @internal_app_color_scheme.text || "hsl(63 41.1% 9.3%)" %>;
    --internal-app-background: <%= @internal_app_color_scheme.background || "hsl(360 86.2% 100%)" %>;
  }
</style>