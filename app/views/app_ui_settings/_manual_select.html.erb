<div class="internal-app-color-scheme">
  <div class="color-scheme-column" data-controller="color-picker" 
    data-color-picker-callback-url-value="<%= app_ui_settings_path %>">
    <div class="preview">
      <h4> Abc </h4>
    </div>
    <input name="header" type="text" data-coloris 
      data-action="color-picker#change" data-color-picker-prefix-param="internal-app" 
      value="<%= @internal_app_color_scheme.header %>">
    <span> Header Text </span>
  </div>

  <div class="color-scheme-column" data-controller="color-picker" 
    data-color-picker-callback-url-value="<%= app_ui_settings_path %>">
    <div class="preview">
      <p> lorum ipsum hipsum.. </p>
    </div>
    <input name="text" type="text" data-coloris 
      data-action="color-picker#change" data-color-picker-prefix-param="internal-app" 
      value="<%= @internal_app_color_scheme.text %>">
    <span> Text </span>
  </div>

  <div class="color-scheme-column" data-controller="color-picker" 
    data-color-picker-callback-url-value="<%= app_ui_settings_path %>">
    <div class="preview">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9.53 16.122a3 3 0 0 0-5.78 1.128 2.25 2.25 0 0 1-2.4 2.245 4.5 4.5 0 0 0 8.4-2.245c0-.399-.078-.78-.22-1.128Zm0 0a15.998 15.998 0 0 0 3.388-1.62m-5.043-.025a15.994 15.994 0 0 1 1.622-3.395m3.42 3.42a15.995 15.995 0 0 0 4.764-4.648l3.876-5.814a1.151 1.151 0 0 0-1.597-1.597L14.146 6.32a15.996 15.996 0 0 0-4.649 4.763m3.42 3.42a6.776 6.776 0 0 0-3.42-3.42" />
      </svg>
    </div>
    <input name="background" type="text" data-coloris 
      data-action="color-picker#change" data-color-picker-prefix-param="internal-app" 
      value="<%= @internal_app_color_scheme.background %>">
    <span> Page Background </span>
  </div>
</div>